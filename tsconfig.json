{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "es2015",
    "outDir": "./dist",
    "declaration": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
  }
}